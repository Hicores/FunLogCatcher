<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/global_color_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="标题"
        android:textSize="20dp"
        android:textColor="@color/global_color_font"
        android:id="@+id/xlist_root_title"
        android:gravity="center"
        android:layout_alignParentTop="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/xlist_root_title"
        android:singleLine="true"
        android:maxLines="1"
        android:id="@+id/xlist_root_search_edit"
        android:hint="搜索"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/xlist_root_content_scroll"
        android:layout_below="@id/xlist_root_search_edit">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/xlist_root_content"/>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确定"
        android:textSize="20dp"
        android:textColor="@color/global_color_font"
        android:foreground="@drawable/design_ui_ripple"
        android:id="@+id/xlist_root_btn"
        android:gravity="center"
        android:layout_below="@+id/xlist_root_content_scroll"/>
</RelativeLayout>